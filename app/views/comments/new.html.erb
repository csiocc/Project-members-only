<% content_for :title, "New comment" %>

<div class="card">
  <div class="card-header">
    <h1 class="card-title">New comment</h1>
  </div>

  <% if @comment.post.present? %>
    <p class="meta mb-2">for post: <%= link_to @comment.post.title, @comment.post %></p>
  <% end %>

  <%= render "form" %>

  <div class="actions mt-2">
    <% if @comment.post.present? %>
      <%= link_to "Back to post", @comment.post %>
    <% end %>
    <%= link_to "All posts", posts_path %>
  </div>
</div>
